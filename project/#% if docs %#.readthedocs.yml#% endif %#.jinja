version: 2
mkdocs:
  configuration: "mkdocs.yml"
build:
  os: "ubuntu-22.04"
  tools:
    python: "{{python_version}}"
  jobs:
    post_install:
    - "pip install poetry"
    - "poetry config virtualenvs.create false"
    - "poetry install --with=docs"
